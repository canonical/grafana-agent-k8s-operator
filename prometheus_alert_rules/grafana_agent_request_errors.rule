# Based on https://awesome-prometheus-alerts.grep.to/rules.html#loki
alert: GrafanaAgentRequestErrors
expr: 100 * sum(rate(agent_request_duration_seconds_count{status_code=~"5.."}[1m])) by (namespace, job, route) / sum(rate(agent_request_duration_seconds_count[1m])) by (namespace, job, route) > 10
for: 15m
labels:
  severity: critical
annotations:
  summary: Loki request errors (instance {{ $labels.instance }})
  description: "The {{ $labels.job }} and {{ $labels.route }} are experiencing errors\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}"
