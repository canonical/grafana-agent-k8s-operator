# Based on https://awesome-prometheus-alerts.grep.to/rules.html#prometheus-self-monitoring-1
alert: GrafanaAgentUnavailable
expr: absent(up{})
for: 0m
labels:
  severity: critical
annotations:
  summary: Grafana Agent {{ $labels.juju_model }}/{{ $labels.juju_unit }} unavailable
  description: >
    The Grafana Agent {{ $labels.juju_model }} {{ $labels.juju_unit }} is unavailable
    LABELS = {{ $labels }}
